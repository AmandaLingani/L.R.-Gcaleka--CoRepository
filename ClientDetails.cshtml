@model L.R._Gcaleka__Co.Models.Clientele
@{
    Layout = "_StaffLayout";
}

<body>
    <div class="main-content">
        <div class="container md-4">
            <h2>Client Details</h2>
            <hr />

            <div class="row">
                <div class="col-md-12">
                    <label asp-for="ClientType" class=""></label>
                    <span class="form-control">@Model.ClientType</span>
                </div>
            </div>
            x

            @if (Model.ClientType.ToString() == "Individual")
            {
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">First Name:</label>
                    <span class="form-control">@Model.FirstName</span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Last Name:</label>
                    <span class="form-control">@Model.LastName</span>
                </div>

                <div class="form-group">
                    <label asp-for="IdentityNumber" class="control-label">Identity Number:</label>
                    <span class="form-control">@Model.IdentityNumber</span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">Date Of Birth:</label>
                    <span class="form-control">@Model.DateOfBirth</span>
                </div>
            }

            @if (Model.ClientType.ToString() == "Company")
            {
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label">Company Name:</label>
                    <span class="form-control">@Model.CompanyName</span>
                </div>
            }

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label">Contact Number:</label>
                <span class="form-control">@Model.ContactNumber</span>
            </div>
            <div class="form-group">
                <label asp-for="AltContactNumber" class="control-label">Alternative Contact Number:</label>
                <span class="form-control">@HtmlHelpers.DisplayValue(@Model.AltContactNumber) </span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label">Email Address:</label>
                <span class="form-control">@HtmlHelpers.DisplayValue(@Model.EmailAddress) </span>
            </div>


            <a asp-action="ClientList" asp-controller="Home" class="button">Back to Clients</a>
        </div>

        <div class="row">
            <div class="col-md-4">
                <a class="btn" asp-controller="Home" asp-action="CreateFile" asp-route-id="@Model.ClienteleId">Open File</a>
            </div>
        </div>
    </div>
</body>
