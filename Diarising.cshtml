@model L.R._Gcaleka__Co.Models.Diarise
@{
    Layout = "_StaffLayout";
}

<body>

    <div class="modal fade" id="diarisingModal" tabindex="-1" aria-labelledby="fileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-tittle" id="fileModalLabel">Schedule File Review</h4>
                </div>

                <div class="modal-body">
                    <form asp-action="Diarising" method="post">
                        <input type="hidden" name="FileId" value="@Model.FileId" />

                        <div class="form-group">
                            <label asp-for="ScheduledDate" class="control-label">Select Date:</label>
                            <input type="date" asp-for="ScheduledDate" required class="form-control" />
                        </div>

                        <div class="form-check">
                            <input type="checkbox" asp-for="IsCourtDate" class="form-check-input" id="courtDateCheck" />
                            <label asp-for="IsCourtDate" class="control-label">Court Date?</label>
                        </div>

                        <div class="form-group">
                            <label asp-for="CourtName" class="control-label">Specify Court:</label>
                            <input asp-for="CourtName" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success mt-3">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="~/js/diarising.js"></script>

